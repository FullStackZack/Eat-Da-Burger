

<div class="container">
    <div class="row">
        <div class="col-md-4">
           <ul>
               {{#each burgers}}
                  {{#unless devoured}}
                     <li>{{burger_name}} <button class="devouredbtn" data-id={{id}}>Time To Eat!...</button></li>
                  {{/unless}}
               {{/each}}
           </ul>

        </div>
        <div class="col-md-4">
       
            <img class="w-100" src="/assets/img/burger.png" alt="Photo of Burger">
            Enter a Burger!<input type="text" id="burger"><button  id="add_burger">Add Burger!</button>

        </div>
        <div class="col-md-4">
            <ul>
               {{#each burgers}}
                  {{#if devoured}}
                     <li>{{burger_name}}</li>
                  {{/if}}
               {{/each}}
            </ul>


        </div>
    </div>
</div>
<h1>Eat Da Burger</h1>